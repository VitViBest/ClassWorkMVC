@model EpamLesson14.Models.DetailsVM

@{
    ViewBag.Title = "Details";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(x => x.Project.Name)
        </dt>
        <dd>
            @Html.DisplayFor(x => x.Project.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(x => x.Project.Description)
        </dt>
        <dd>
            @Html.DisplayFor(x => x.Project.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(x => x.Project.Hard)
        </dt>
        <dd>
            @Html.DisplayFor(x => x.Project.Hard)
        </dd>
        <dt>
            @Html.DisplayName("Дата завершения")
        </dt>
        <dd>
            @Html.DisplayFor(x => x.Project.DateEnd)
        </dd>
        <dt>
            @Html.DisplayName("Владелец")
        </dt>
        <dd>
            @Html.DisplayFor(x => x.Project.Owner.Name)
        </dd>
        <dt>
            Состав команды:
        </dt>

        <dd>
            @foreach (var i in Model.Project.ProjectTeams.First().EmployeeTimes)
            {
                <p>@i.Employee.Name до @i.DateLeave.ToShortDateString()</p>
            }
        </dd>
    </dl>
</div>
